<script>
    $(document).ready(function () {
        $('#stacks').DataTable({
            ajax: '/api/1.0/stacks',
            serverSide: true,
            columns: [
                {
                    data: 'stack_name',
                    name: 'stack_name',
                    render: function (data, type, row, meta) {
                        return '<a href="/stack/' + data + '">' + data + '</a>';
                    }
                },
                {data: 'owner', name: 'owner'},
                {data: 'type', name: 'type'},
                {data: 'status', name: 'status'}
            ],
        });
    });
</script>

<table id="stacks" class="table table-stripped table-bordered" style="width:100%">
  <thead>
  <tr>
    <th>Stack name</th>
    <th>Owner</th>
    <th>Type</th>
    <th>Status</th>
  </tr>
  </thead>

  <tfoot>
  <tr>
    <th>Stack name</th>
    <th>Owner</th>
    <th>Type</th>
    <th>Status</th>
  </tr>
  </tfoot>
</table>